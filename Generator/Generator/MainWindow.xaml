<Window x:Class="Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Generator"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <StackPanel Background="#1C1F24">
        <Grid Height="21">
            <Button x:Name="BtnPowerOff" HorizontalAlignment="Right" Width="20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Margin="0 1 5 0" Foreground="White" Click="BtnPowerOff_Click">
                <materialDesign:PackIcon Kind="Power"/>
            </Button>
            <Grid Width="775" HorizontalAlignment="Left"/>
        </Grid>
        <Grid Height="50">
            <DatePicker Foreground="White" Width="100" materialDesign:HintAssist.Hint="Pick Date" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
        </Grid>
    </StackPanel>
</Window>
